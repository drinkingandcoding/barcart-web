{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", 
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "trailing-comma": [true, {
    "singleline": "never",
    "multiline": {
      "objects": "never",
      "arrays": "never",
      "functions": "never",
      "typeLiterals": "ignore"
    }
  }]
}
